<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="CoffeeShopManagement.Views.ProductForm"
        Title="Product Details"
        Width="400" Height="500"
        WindowStartupLocation="CenterOwner">
    
    <Border Classes="liquid-glass" Margin="20" Padding="20">
        <StackPanel Spacing="15">
            <TextBlock Text="Product Details" Classes="title" Margin="0,0,0,10"/>
            
            <StackPanel Spacing="8">
                <TextBlock Text="Name" Classes="subtitle"/>
                <TextBox Text="{Binding Name}" Classes="liquid-input"/>
            </StackPanel>
            
            <StackPanel Spacing="8">
                <TextBlock Text="Description" Classes="subtitle"/>
                <TextBox Text="{Binding Description}" 
                         AcceptsReturn="True" 
                         TextWrapping="Wrap" 
                         Height="60"
                         Classes="liquid-input"/>
            </StackPanel>
            
            <StackPanel Spacing="8">
                <TextBlock Text="Price" Classes="subtitle"/>
                <TextBox Text="{Binding Price}" Classes="liquid-input"/>
            </StackPanel>
            
            <StackPanel Spacing="8">
                <TextBlock Text="Stock Quantity" Classes="subtitle"/>
                <TextBox Text="{Binding StockQuantity}" Classes="liquid-input"/>
            </StackPanel>
            
            <StackPanel Spacing="8">
                <TextBlock Text="Category" Classes="subtitle"/>
                <ComboBox ItemsSource="{Binding Categories}" 
                          SelectedItem="{Binding Category}"
                          Classes="liquid-input"/>
            </StackPanel>
            
            <CheckBox Content="Is Available" IsChecked="{Binding IsAvailable}" Margin="0,10,0,0"/>
            
            <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Cancel" Classes="liquid-button" Click="Cancel_Click"/>
                <Button Content="Save" Classes="liquid-button" Click="Save_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>