<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="CoffeeShopManagement.Views.OrderForm"
        Title="Create Order"
        Width="600" Height="700"
        WindowStartupLocation="CenterOwner">
    
    <Border Classes="liquid-glass" Margin="20" Padding="20">
        <StackPanel Spacing="15">
            <TextBlock Text="Create New Order" Classes="title" Margin="0,0,0,10"/>
            
            <StackPanel Spacing="8">
                <TextBlock Text="Customer Name" Classes="subtitle"/>
                <TextBox Text="{Binding CustomerName}" Classes="liquid-input"/>
            </StackPanel>

            <TextBlock Text="Order Items" Classes="subtitle" Margin="0,10,0,5"/>
            
            <ListBox ItemsSource="{Binding Items}" 
                     Classes="liquid-list" 
                     Height="300">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="10" Margin="2" Background="{StaticResource PrimaryLinearGradient}" CornerRadius="8">
                            <Grid ColumnDefinitions="*,Auto,Auto" RowDefinitions="Auto,Auto">
                                <TextBlock Text="{Binding ProductName}" FontWeight="SemiBold" Grid.Row="0" Grid.Column="0"/>
                                <TextBlock Text="{Binding Quantity, StringFormat='Qty: {0}'}" 
                                           Grid.Row="1" Grid.Column="0"
                                           Foreground="#7F8C8D"/>
                                <TextBlock Text="{Binding UnitPrice, StringFormat='${0:F2}'}" 
                                           Grid.Row="0" Grid.Column="1"
                                           Margin="10,0"
                                           Foreground="#27AE60"/>
                                <TextBlock Text="{Binding Subtotal, StringFormat='${0:F2}'}" 
                                           Grid.Row="0" Grid.Column="2"
                                           FontWeight="Bold"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Border Classes="liquid-glass" Padding="15" Margin="0,10,0,0">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Text="Total Amount:" Classes="subtitle" Grid.Column="0"/>
                    <TextBlock Text="{Binding TotalAmount, StringFormat='${0:F2}'}" 
                               Classes="title" 
                               Grid.Column="1"
                               Foreground="#E74C3C"/>
                </Grid>
            </Border>
            
            <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Cancel" Classes="liquid-button" Click="Cancel_Click"/>
                <Button Content="Create Order" Classes="liquid-button" Click="Save_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>